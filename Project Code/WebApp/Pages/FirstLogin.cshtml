@page
@model MediaBazaar_WebApp.Pages.FirstLoginModel
@{
	ViewData["Title"] = "FirstLogin";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="container text-center custom-size">
    <div class="row">
        <div class="col-auto image-holder"></div>
        <div class="col-12 container">
            <div class="card custom-height custom-cent custom-style" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <h1 class="text-uppercase text-center mb-5">Change Your Password:</h1>
                    <form method="post" asp-page-handler="ChangePassword">
                        <div class="form-outline mb-4">
                            <label asp-for="newPassword" class="form-label" for="form3Example4cg">New Password:</label>
                            <input asp-for="newPassword" type="text" name="newPassword" id="form3Example4cg" class="form-control form-control-lg" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" value="Submit" class="btn btn-block btn-lg gradient-custom-4 text-body">
                                Change Password </button>>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>
